<h1>Neue Termin</h1>
<div class="goldbox">
<form action="" method="post">
    <label for="date">Datum</label>
    <input type="date" name="date" id="date" required>

    <label for="enddate">bis (falls mehrtägig)</label>
    <input type="date" name="enddate" id="enddate">

    <label for="town">Stadt</label>
    <input type="text" name="town" id="town">

    <label for="venue">Veranstaltungsort</label>
    <input type="text" name="venue" id="venue" required>

    <label for="status">Status</label>
    <select name="status" id="status">
        <option value="" selected></option>
        <option value="BESTÄTIGT">Bestätigt</option>
        <option value="VERSCHOBEN">Verschoben</option>
        <option value="ABGESAGT">Abgesagt</option>
    </select>

    <label for="comment">Weitere Infromationen</label>
    <textarea name="comment" id="comment" cols="30" rows="10"></textarea>
            <div class="buttonflex">
            <button class="edit-button" name="action" type="submit" value="add">Hinzufügen</button>
            <a href="#">Zurück</a>
        </div>

</form>
</div>