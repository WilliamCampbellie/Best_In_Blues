<h1>Shopartikel bearbeiten</h1>

<div class="goldbox">
    <form action="#" method="post">
        <label for="artist">Projekt</label>
        <input type="text" name="artist" id="artist" value="artist" required>

        <label for="title">Titel</label>
        <input type="text" name="title" id="title" value="title" required>

        <label for="year">Jahr</label>
        {{!-- insert current year as default value --}}
        <input type="number" name="year" id="year" value="year">

        <label for="description">Beschreibung</label>
        <textarea name="description" id="description" cols="30" rows="10" value="description"></textarea>

        <label for="price">Preis</label>
        <input type="number" name="price" id="price" value="price" required>

        <label for="promotionText">Werbetext</label>
        <textarea name="promotionText" id="promotionText" cols="30" rows="10" value="promotionText"></textarea>

        <label for="promotionImage">Werbebild (URL)</label>
        <input type="text" name="promotionImage" id="promotionImage" value="promotionImage">

        <label for="endorsements">Rezensionen</label>
        {{!-- how? --}}

        <label for="available">Verfügbar</label>
        <select name="available" id="available">
            <option value="true" selected>Ja</option>
            <option value="false">Nein</option>
        </select>

        <label for="delivery">Lieferung</label>
        <select name="available" id="available">
            {{!-- current value must be selected --}}
            <option value=""></option>
            <option value="1-3 Tage" selected>1-3 Tage</option>
            <option value="1-2 Wochen">1-2 Wochen</option>
            <option value="2-4 Wochen">2-4 Wochen</option>
        </select>

        <label for="image">Bild (URL)</label>
        {{!-- update later for cloudinary --}}
        <input type="text" name="delivery" id="delivery" value="image">

        <label for="spotify">Link zu Spotify</label>
        <input type="text" name="spotify" id="spotify" value="spotify">

        <label for="shoppingcart">Link zu Paypal</label>
        <input type="text" name="shoppingcart" id="shoppingcart" required>

        <div class="buttonflex">
            <button class="edit-button" name="action" type="submit" value="edit">Änderungen speichern</button>
            <button class="delete-button" name="action" type="submit" value="delete">Löschen</button>
            <a href="#">Zurück</a>
        </div>
    </form>
</div>